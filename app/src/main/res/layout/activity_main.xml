<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:hint="ip地址"
        android:text="192.168.43.57"
        android:id="@+id/text_ip"
        android:layout_centerInParent="true"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        />
    <EditText
        android:text="9988"
        android:hint="端口号"
        android:layout_below="@id/text_ip"
        android:layout_centerInParent="true"
        android:id="@+id/text_port"
        android:layout_width="200dp"
        android:layout_height="wrap_content"/>
    <EditText
        android:text="abc"
        android:hint="请求信息"
        android:layout_below="@id/text_port"
        android:layout_centerInParent="true"
        android:id="@+id/text_post"
        android:layout_width="200dp"
        android:layout_height="wrap_content"/>
    <Button
        android:layout_below="@id/text_post"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CONN"
        android:id="@+id/btn_conn"/>
    <Button
        android:layout_below="@id/btn_conn"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_post"
        android:text="POST"/>
    <Button
        android:layout_below="@id/btn_post"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GET"
        android:id="@+id/btn_get"/>

    <TextView
        android:id="@+id/text_response"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_above="@id/text_ip"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        android:text="返回信息："/>
</RelativeLayout>